<!DOCTYPE module SYSTEM "../module.dtd">

<module name="px4fmu_5.0_chibios" dir="boards">
  <doc>
    <description>
      Specific configuration for PX4FMU v5.0 with ChibiOS
    </description>
  </doc>
  <dep>
    <depends>spi_master,baro_ms5611_spi</depends>
  </dep>
  <makefile target="!sim|nps|fbw">
    <define name="USE_RTC_BACKUP" value="TRUE"/>
    <configure name="SDLOG_USE_RTC" value="FALSE"/>
    <configure name="MS5611_SPI_DEV" value="spi4"/> <!-- spi4 -->
    <configure name="MS5611_SLAVE_IDX" value="SPI_SLAVE4"/> <!-- SPI_SLAVE4 -->
  </makefile>
</module>

