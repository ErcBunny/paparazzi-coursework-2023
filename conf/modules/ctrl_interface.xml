<!DOCTYPE module SYSTEM "module.dtd">
<module name="ctrl_interface" dir="guidance" task="control">
  <doc>
    <description>This module is used to have a clean interface with sliders and booleans to gradually implement control changes that could jeopardize drone control.</description>
  </doc>
    <settings>
    <dl_settings>
      <dl_settings NAME="ctrl_interface">
        <dl_setting var="separate_TL" min="0" step="1" max="1" values="OFF|ON" shortname="separate_TL"/>
        <dl_setting var="better_lpe" min="0" step="1" max="1" values="OFF|ON" shortname="better_lpe"/>
        <dl_setting var="better_ail" min="0" step="1" max="1" values="OFF|ON" shortname="better_ail"/>
        <dl_setting var="manual_eff" min="0" step="1" max="1" values="OFF|ON" shortname="manual_eff"/>
        <dl_setting var="better_eff" min="0" step="1" max="1" values="OFF|ON" shortname="better_eff"/>
        <dl_setting var="roll_ail_L_eff" min="-0.1" step="0.001" max="0.1" shortname="ail_L_p"/>
        <dl_setting var="roll_ail_R_eff" min="-0.1" step="0.001" max="0.1" shortname="ail_R_p"/>
        <dl_setting var="pitch_ail_L_eff" min="-0.1" step="0.001" max="0.1" shortname="ail_L_q"/>
        <dl_setting var="pitch_ail_R_eff" min="-0.1" step="0.001" max="0.1" shortname="ail_R_q"/>
        <dl_setting var="pitch_elev_eff" min="-0.1" step="0.001" max="0.1" shortname="ele_q"/>
        <dl_setting var="yaw_rud_eff" min="-0.1" step="0.001" max="0.1" shortname="rud_r"/>
      </dl_settings>
    </dl_settings>
  </settings>
  <header>
    <file name="ctrl_interface.h"/>
  </header>
  <init fun="interface_init()"/>
  <makefile>
    <file name="ctrl_interface.c"/>
    <test/>
  </makefile>
</module>
