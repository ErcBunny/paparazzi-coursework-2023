  <command_laws>
    <call fun="overactuated_mixing_run()"/>
    <let var="th_hold" value="LessThan(RadioControlValues(RADIO_TH_HOLD), -4800)"/>
    <set servo="MOTOR_1" value="($th_hold? -9600 : overactuated_mixing.commands[0])"/>
    <set servo="MOTOR_2" value="($th_hold? -9600 : overactuated_mixing.commands[1])"/>
    <set servo="MOTOR_3" value="($th_hold? -9600 : overactuated_mixing.commands[2])"/>
    <set servo="MOTOR_4" value="($th_hold? -9600 : overactuated_mixing.commands[3])"/>
    <set servo="EL_1" value="(overactuated_mixing.commands[4])"/>
    <set servo="EL_2" value="(overactuated_mixing.commands[5])"/>
    <set servo="EL_3" value="(overactuated_mixing.commands[6])"/>
    <set servo="EL_4" value="(overactuated_mixing.commands[7])"/>
    <set servo="AZ_1" value="(overactuated_mixing.commands[8])"/>
    <set servo="AZ_2" value="(overactuated_mixing.commands[9])"/>
    <set servo="AZ_3" value="(-overactuated_mixing.commands[10])"/>
    <set servo="AZ_4" value="(-overactuated_mixing.commands[11])"/>
  </command_laws>


